<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    tools:context="com.snydu.icuvideo.icuvideoapp.activity.SettingActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IPAddress"
        android:background="@mipmap/edittext_kuang"
        android:layout_marginBottom="43dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/portAddress"
        android:layout_alignEnd="@+id/commitIpButton"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="服务器IP"
        android:id="@+id/textView7"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/IPAddress"
        android:layout_toStartOf="@+id/IPAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="端口号"
        android:id="@+id/textView6"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/portAddress"
        android:layout_marginBottom="244dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/edittext_kuang"
        android:id="@+id/portAddress"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/commitIpButton"
        android:layout_toEndOf="@+id/textView7" />

    <ImageButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="#70adf9"
        android:src="@mipmap/qurenbutton"
        android:id="@+id/commitIpButton"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/portAddress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="设置"
        android:textSize="45dp"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />
</RelativeLayout>
