<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.snydu.icuvideo.icuvideoapp.MainActivity">


    <EditText
        android:id="@+id/Login_Id_edittext_mainactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Login_password_edittext_mainactivity"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginLeft="1dp"
        android:layout_toEndOf="@+id/imageView2"
        android:background="@mipmap/edittext_kuang"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/Login_password_edittext_mainactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignEnd="@+id/Login_button_mainactivity"
        android:layout_marginLeft="1dp"
        android:layout_toEndOf="@+id/imageView3"
        android:background="@mipmap/edittext_kuang"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/Login_button_mainactivity"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_password_edittext_mainactivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="#70adf9"
        android:src="@mipmap/login" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:src="@mipmap/name_login"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Login_button_mainactivity" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="25dp"
        android:src="@mipmap/password_login" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/settingButton"
        android:background="@mipmap/settingipbutton"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
